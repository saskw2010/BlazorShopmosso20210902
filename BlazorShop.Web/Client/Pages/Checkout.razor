@page "/checkout"
@attribute [Authorize]

@if (cartProducts == null)
{
    <LoadingScreen />
}
else
{
    <section class="section-pagetop bg">
        <div class="container">
            <h2 class="title-page text-center">إتمام العملية</h2>
        </div>
    </section>

    <section class="section-content padding-y bg">
        <div class="container">
            <div class="row">

                <aside class="col-md-12">
                    <div class="card mb-3">
                        <EditForm Model="address" OnValidSubmit="SubmitAsync">
                            <article class="card-body">
                                <header class="mb-4">
                                    <h4 class="card-title">مراجعة قائمة الإهـداءات</h4>
                                </header>
                                <div class="row">

                                    @foreach (var product in cartProducts)
                                    {
                                        <div class="col-md-6">
                                            <figure class="itemside  mb-3">
                                                <div class="aside">
                                                    <img src="@product.ImageSource" class="border img-xs" />
                                                </div>
                                                <figcaption class="info">
                                                    <p> @product.Name </p>
                                                    <table class="tablecheckout table-responsive">
                                                        <tr>
                                                            <td><span>السعر @product.Price دينار</span></td>
                                                            <td><span>x</span></td>
                                                            <td><span class="text-danger">العدد @product.Quantity</span></td>
                                                            <td><span>المجموع :</span></td>
                                                            <td><span class="text-primary-light">  @(product.Price * product.Quantity) دينار</span></td>
                                                        </tr>
                                                        @*@for (int i = 1; i <= product.Quantity; i++)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <InputText @bind-Value="address.Country" type="text" class="form-control" />
                                                                    <span class="text-danger">العدد @i</span>
                                                                </td>
                                                            </tr>
                                                        }*@

                                                    </table>


                                                    <br />

                                                </figcaption>
                                            </figure>
                                        </div>
                                    }

                                </div>
                            </article>
                            <article class="card-body border-top">

                                <dl class="row">
                                    <dt class="col-sm-10">المجموع: <span class="float-left2 text-muted">@cartProducts.Count() عنصر</span></dt>
                                    <dd class="col-sm-2 text-left"><strong>@totalPrice دينار</strong></dd>


                                    <dt class="col-sm-10">المجموع:</dt>
                                    <dd class="col-sm-2 text-left"><strong class="h5 text-dark"> @totalPrice دينار</strong></dd>
                                </dl>

                            </article>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> تأكيد الطلب </button>
                            </div>
                        </EditForm>

                    </div>

                    
                    
                </aside>

