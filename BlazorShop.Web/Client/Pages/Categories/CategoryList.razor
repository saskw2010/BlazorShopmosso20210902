@page "/Categories/categorylist"
@attribute [Authorize]


@if (categories == null)
{
    <LoadingScreen />
}
else
{
    <section class="section-intro padding-y-sm bg">
        <div class="container">

            <div class="intro-banner-wrap">
                @*<img src="images/banners/4.png" class="img-fluid ">*@
            </div>

        </div>
    </section>



    <section class="section-content padding-y-sm bg">
        <div class="container">

            <header class="section-heading">
                @*<a href="/categories/page/1" class="btn btn-outline-primary float-left">مشاهدة الكل</a>*@
                <h3 class="section-title">الفئـات المتاحة</h3>
            </header>

            <div class="row">

                @foreach (var category in categories)
                {
                    <div class="col-md-3">
                        <div class="card card-product-grid">
                            <a href="products/category/@category.Name/@category.Id" class="img-wrap">
                                @if (category.ImageSource != null)
                                {
                                    <img src="@category.ImageSource">
                                }

                            </a>
                            <figcaption class="info-wrap">
                                <a href="products/category/@category.Name/@category.Id" class="title">
                                    @category.Name
                                </a>
                                <AuthorizeView Roles="@Constants.AdministratorRole" Context="Auth">
                                    <a href="/Categories/updatecat/@category.Id"
                                       class="btn btn-block btn-primary">
                                        تعديل الفئة
                                    </a>
                                    </AuthorizeView>
                                    @*<div class="price mt-1">$@product.Price</div>*@
                            </figcaption>
                        </div>
                    </div>
                }
            </div>

        </div>
    </section>
}

